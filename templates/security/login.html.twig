{% extends 'base.html.twig' %}

{% block login %}
    <br/>

    <div class="col-lg-10 offset-lg-1">
        <div class="container">
            <h1>Connexion</h1>
        </div>
    </div>

    <br/>

    <div class="col-lg-4 offset-lg-4">
        <div class="container">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_errors(form) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.username) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.password) }}
            </div>
            <div class="offset-lg-9">
                <button class="btn btn-login" type="submit">Se connecter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <br/>
{% endblock %}