{% extends 'base.html.twig' %}

{% block resetPassword %}
    <br/>

    <div class="col-lg-10 offset-lg-1">
        <div class="container">
            <h1>RÃ©initialisation du mot de passe</h1>
        </div>
    </div>

    <br/>

    <div class="col-lg-4 offset-lg-4">
        <div class="card card-resetPassword">
            <div class="card-body">
                <div class="container">
                    <h4 class="card-title">
                        Enregistrement du nouveau mot de passe
                    </h4>
                    {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_errors(form) }}
                    </div>
                    <div class="mb-2">
                        <i class="btn btn-passwordLogo bi bi-eye-fill" id="changePasswordLogo" onclick="DisplayHidePassword()"></i>
                        <span id="displayPassword">Afficher</span> le mot de passe
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.plainPassword) }}
                    </div>
                    <div class="offset-lg-10">
                        <button class="btn btn-login" type="submit">Valider</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <br/>

    <script>
        function DisplayHidePassword()
        {
            var input = document.getElementById("reset_password_plainPassword_first");
            var span = document.getElementById("displayPassword");
            var i = document.getElementById("changePasswordLogo");
            if (input.type === "password")
            {
                input.type = "text";
                span.innerText = "Masquer";
                i.className = "btn btn-passwordLogo bi bi-eye-slash-fill";
            }
            else
            {
                input.type = "password";
                span.innerText = "Afficher";
                i.className = "btn btn-passwordLogo bi bi-eye-fill";
            }
        }
    </script>
{% endblock %}