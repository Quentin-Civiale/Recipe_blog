{% extends 'base.html.twig' %}

{% block createRecipe %}
    <div class="col-lg-10 offset-lg-1">
        <div class="container">
            <h1>Publier une nouvelle recette</h1>
        </div>
    </div>

    <br/>

    <div class="col-lg-8 offset-lg-2">
        <div class="container">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.category) }}
                {{ form_row(form.file) }}
                {{ form_row(form.content) }}
                <button type="submit">Publier</button>
            {{ form_end(form) }}
        </div>
    </div>

    <br/>
{% endblock %}