{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-12 mb-4">
            <h1>Les Recettes</h1>
            <p>Retrouvez ici toutes les recettes publiées par les utilisateurs.</p>
        </div>
    </div>

    {% for recipe in recipes %}
        <div class="col-4 mb-3">
            <div class="card">
                <div class="card-header">{{ recipe.title }} - {{ recipe.category|capitalize }}</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <small class="text-muted">Publiée le {{ recipe.publishedAt|date("d/m/Y") }}</small>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('blog_read', { id: recipe.id }) }}">Lire la suite</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}