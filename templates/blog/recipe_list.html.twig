{% extends "base.html.twig" %}

{% block body %}
    <div class="col-12 mb-4">
        <h1>Les Recettes</h1>
        <p>Retrouvez ici toutes les recettes publiées par les utilisateurs.</p>
    </div>

    <div class="jumbotron">
        <div class="container">
            <div class="col-4 mb-3">
                {{ form(form) }}
            </div>
        </div>
    </div>

    <div class="row">

        {% for recipe in recipes %}
            <div class="col-4 mb-3">
                <div class="card">
                    <div class="card-header">{{ recipe.title }} - {{ recipe.category.name|capitalize }}</div>
                    <img class="card-img-top" src="https://picsum.photos/400/300" alt="{{ recipe.title }}">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <small class="text-muted">Publiée le {{ recipe.publishedAt|date("d/m/Y") }}</small>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path('blog_read', { id: recipe.id }) }}">Lire la suite</a>
                        <a href="{{ path('blog_update', { id: recipe.id }) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% endfor %}

