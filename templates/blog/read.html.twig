{% extends "base.html.twig" %}

{% block readRecipe %}
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h1>{{ recipe.title }}</h1>
            <h3>{{ recipe.category.name|capitalize }}</h3>
            <img class="card-img-top" src="{{ asset(recipe.image) }}" alt="{{ recipe.title }}">
            <small>Publi√© le {{ recipe.publishedAt|date("d/m/Y") }}</small>
            <p>{{ recipe.content }}</p>
        </div>
    </div>
{% endblock %}


